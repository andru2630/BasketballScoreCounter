<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#004D40" />
            <gradient android:angle="-90" android:endColor="#004D40" android:startColor="#008248" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#004D40" />
            <gradient android:angle="-90" android:endColor="#008248" android:startColor="#004D40" />
        </shape>
    </item>
</selector>